    <Label fx:id="nombre" alignment="CENTER" layoutX="259.0" layoutY="29.0" prefHeight="23.0" prefWidth="110.0" text="Nombre" />

    <Label fx:id="nivel" alignment="CENTER" layoutX="263.0" layoutY="57.0" prefHeight="25.0" prefWidth="103.0" text="Nivel" />

    <ImageView fx:id="icono" fitHeight="53.0" fitWidth="72.0" layoutX="366.0" layoutY="31.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true"    preserveRatio="true">
        <Image url="@../IconosPokemons/Gengar.png" />
    </ImageView>

    <ProgressBar fx:id="vida" layoutX="85.0" layoutY="34.0" prefHeight="13.0" prefWidth="157.0" progress="0.0" style="-fx-accent: green;" />

</Pane>
