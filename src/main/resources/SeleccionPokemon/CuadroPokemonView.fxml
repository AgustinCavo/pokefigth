      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">

    <ImageView fx:id="cuadro" fitHeight="100.0" fitWidth="441.0" layoutX="6.0" layoutY="7.0" pickOnBounds="true">
        <Image url="@CuadroPokemonNoSeleccionado.png" />
    </ImageView>

    <ImageView fitHeight="25.0" fitWidth="217.0" layoutX="32.0" layoutY="29.0" pickOnBounds="true" preserveRatio="true">
